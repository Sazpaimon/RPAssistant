        <ImageView
            android:id="@+id/imageView_pressed_r1"
            android:layout_width="30.1dp"
            android:layout_height="6.3dp"
            android:layout_marginLeft="184.1dp"
            android:layout_marginTop="7dp"
            android:scaleX="-1"
            android:src="@drawable/pressed_l1" />

        <ImageView
            android:id="@+id/imageView_pressed_r2"
            android:layout_width="19.6dp"
            android:layout_height="10.5dp"
            android:layout_marginLeft="189dp"
            android:layout_marginTop="0.7dp"
