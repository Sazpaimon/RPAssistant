            android:src="@drawable/pressed_option" />

        <ImageView
            android:id="@+id/imageView_pressed_touch"
            android:layout_width="82.6dp"
            android:layout_height="44.8dp"
            android:layout_marginLeft="83.3dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/pressed_touch" />

        <ImageView
            android:id="@+id/imageView_gamepad_base"
            android:layout_width="249.2dp"
            android:layout_height="161dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/gamepad_base" />

        <ImageView
            android:id="@+id/imageView_moved_left_analog"
            android:layout_width="5.6dp"
            android:layout_height="5.6dp"
            android:layout_marginLeft="82.6dp"
            android:layout_marginTop="80.5dp"
            android:src="@drawable/moved_analog" />

        <ImageView
            android:id="@+id/imageView_moved_right_analog"
            android:layout_width="5.6dp"
            android:layout_height="5.6dp"
            android:layout_marginLeft="161.7dp"
            android:layout_marginTop="80.5dp"
            android:src="@drawable/moved_analog" />

    </RelativeLayout>

</RelativeLayout>
