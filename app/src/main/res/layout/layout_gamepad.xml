<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b3b3b">

    <RelativeLayout
        android:id="@+id/relativeLayout_gamepad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageView_gamepad_base2"
            android:layout_width="249.2dp"
            android:layout_height="161dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/gamepad_base2" />

        <ImageView
            android:id="@+id/imageView_pressed_circle"
            android:layout_width="16.1dp"
            android:layout_height="16.1dp"
            android:layout_marginLeft="211.4dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/pressed_circle" />

        <ImageView
            android:id="@+id/imageView_pressed_cross"
            android:layout_width="16.1dp"
            android:layout_height="16.1dp"
            android:layout_marginLeft="193.2dp"
            android:layout_marginTop="59.5dp"
            android:src="@drawable/pressed_circle" />

        <ImageView
            android:id="@+id/imageView_pressed_square"
            android:layout_width="16.1dp"
            android:layout_height="16.1dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/pressed_circle" />

        <ImageView
            android:id="@+id/imageView_pressed_triangle"
            android:layout_width="16.1dp"
            android:layout_height="16.1dp"
            android:layout_marginLeft="193.2dp"
            android:layout_marginTop="23.8dp"
            android:src="@drawable/pressed_circle" />

        <ImageView
            android:id="@+id/imageView_pressed_dleft"
            android:layout_width="20.3dp"
            android:layout_height="14dp"
            android:layout_marginLeft="25.9dp"
            android:layout_marginTop="42.7dp"
            android:rotation="180"
            android:src="@drawable/pressed_dir" />

        <ImageView
            android:id="@+id/imageView_pressed_dright"
            android:layout_width="20.3dp"
            android:layout_height="14dp"
            android:layout_marginLeft="49.7dp"
            android:layout_marginTop="42.7dp"
            android:src="@drawable/pressed_dir" />

        <ImageView
            android:id="@+id/imageView_pressed_ddown"
            android:layout_width="20.3dp"
            android:layout_height="14dp"
            android:layout_marginLeft="37.8dp"
            android:layout_marginTop="53.9dp"
            android:rotation="90"
            android:src="@drawable/pressed_dir" />

        <ImageView
            android:id="@+id/imageView_pressed_dup"
            android:layout_width="20.3dp"
            android:layout_height="14dp"
            android:layout_marginLeft="37.8dp"
            android:layout_marginTop="30.8dp"
            android:rotation="270"
            android:src="@drawable/pressed_dir" />

        <ImageView
            android:id="@+id/imageView_pressed_l1"
            android:layout_width="30.1dp"
            android:layout_height="6.3dp"
