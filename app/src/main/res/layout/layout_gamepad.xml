            android:src="@drawable/pressed_l1" />

        <ImageView
            android:id="@+id/imageView_pressed_l2"
            android:layout_width="19.6dp"
            android:layout_height="10.5dp"
            android:layout_marginLeft="39.9dp"
            android:layout_marginTop="0.7dp"
            android:src="@drawable/pressed_l2" />

        <ImageView
            android:id="@+id/imageView_pressed_l3"
            android:layout_width="32.2dp"
            android:layout_height="32.2dp"
            android:layout_marginLeft="69.3dp"
            android:layout_marginTop="66.5dp"
            android:src="@drawable/pressed_circle" />

        <ImageView
            android:id="@+id/imageView_pressed_option"
            android:layout_width="8.4dp"
            android:layout_height="14dp"
            android:layout_marginLeft="170.8dp"
